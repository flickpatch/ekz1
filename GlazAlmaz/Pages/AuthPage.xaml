<Page x:Class="GlazAlmaz.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlazAlmaz.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" Background="White">

    <Grid>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="24"/>
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Text="Логин"/>
                <TextBox Name="tbLogin" Width="250"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Text="Пароль"/>
                <PasswordBox Name="PbPass" Width="250"/>
            </StackPanel>
            <Button Click="btnAuthClick" Content="Войти" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
